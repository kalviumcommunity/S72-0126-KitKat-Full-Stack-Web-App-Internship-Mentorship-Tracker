# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Environment
NODE_ENV=production
PORT=3001

# Database (Required)
DATABASE_URL="postgresql://username:password@host:port/database"

# Redis Cache (Required for production)
REDIS_URL="rediss://username:password@host:port"

# JWT Configuration (Required)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="24h"

# CORS Configuration (Required)
# Comma-separated list of allowed origins
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Storage Configuration
STORAGE_PROVIDER="s3"  # s3, azure, or local

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Azure Blob Storage Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT_NAME="your-storage-account"
AZURE_STORAGE_ACCOUNT_KEY="your-storage-key"
AZURE_STORAGE_CONTAINER="uploads"

# Local Storage (if using local storage)
LOCAL_UPLOAD_DIR="./uploads"

# Email Configuration (Required for OTP)
SMTP_HOST="your-smtp-host"
SMTP_PORT=587
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@yourdomain.com"
SMTP_FROM_NAME="Your App Name"

# Production Security Settings
TRUST_PROXY=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="info"  # error, warn, info, debug

# Health Check
HEALTH_CHECK_PATH="/health"

# DO NOT SET THESE IN PRODUCTION (Development only)
# OTP_TEST_EMAIL=""  # Remove this line entirely in production