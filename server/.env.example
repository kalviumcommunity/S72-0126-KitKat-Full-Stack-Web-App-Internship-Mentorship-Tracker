# Environment
NODE_ENV="development"
PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/uimp_db?schema=public"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Storage Configuration
STORAGE_PROVIDER="local" # Options: s3, azure, local

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Azure Blob Storage (if using Azure)
AZURE_STORAGE_ACCOUNT_NAME=""
AZURE_STORAGE_ACCOUNT_KEY=""
AZURE_STORAGE_CONTAINER="uploads"

# Local Storage (if using local)
LOCAL_UPLOAD_DIR="./uploads"

# Email Configuration (SMTP)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@uimp.com"
