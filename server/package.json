{
  "name": "uimp-server",
  "version": "0.1.0",
  "description": "Unified Internship & Mentorship Portal - Backend API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:mock": "tsx watch src/server-dev.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma generate && prisma migrate dev && prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=unit --watchAll=false",
    "test:integration": "jest --testPathPattern=integration --watchAll=false",
    "test:all": "jest --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=1",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose",
    "test:setup": "node -e \"console.log('Run setup-test-db.ps1 or setup-test-db.sh to setup test database')\"",
    "test:clean": "jest --clearCache && rm -rf coverage",
    "test:email": "tsx src/scripts/test-email.ts",
    "test:otp": "tsx src/scripts/test-otp-flow.ts",
    "deploy:production": "chmod +x scripts/deploy-production.sh && ./scripts/deploy-production.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop uimp-backend",
    "pm2:restart": "pm2 restart uimp-backend",
    "pm2:logs": "pm2 logs uimp-backend",
    "docker:build": "docker build -t uimp-backend .",
    "docker:run": "docker run -d --name uimp-backend --env-file .env.production -p 3001:3001 --restart unless-stopped uimp-backend",
    "docker:stop": "docker stop uimp-backend && docker rm uimp-backend"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.968.0",
    "@aws-sdk/s3-request-presigner": "^3.968.0",
    "@azure/storage-blob": "^12.29.1",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.1.11",
    "redis": "^4.7.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.12",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^5.19.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
